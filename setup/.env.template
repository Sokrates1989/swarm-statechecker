# --- Stack Configuration ---
STACK_NAME=statechecker
DATA_ROOT=/gluster_storage/swarm/monitoring/statechecker-server

PROXY_TYPE=traefik

TRAEFIK_NETWORK_NAME=traefik

# --- Docker Image Configuration ---
IMAGE_NAME=sokrates1989/statechecker
IMAGE_VERSION=latest

WEB_IMAGE_NAME=sokrates1989/statechecker-web
WEB_IMAGE_VERSION=latest

# --- API Configuration ---
API_PORT=8787
API_URL=api.statechecker.domain.de
SERVER_AUTHENTICATION_TOKEN=PLEASE_USE_SECRET_INSTEAD

API_REPLICAS=1

# --- Logging ---
TIMEZONE=Europe/Berlin

# --- Check Frequency ---
CHECK_WEBSITES_EVERY_X_MINUTES=30
CHECK_GOOGLEDRIVE_EVERY_X_MINUTES=60

CHECK_REPLICAS=1

# --- Messaging ---
STATUS_MESSAGES_TIME_OFFSET_PERCENTAGE=2.5

# --- Email Notifications ---
EMAIL_ENABLED=false
EMAIL_SENDER_USER=some.mail@domain.com
EMAIL_SENDER_PASSWORD=
EMAIL_SENDER_HOST=smtp.example.com
EMAIL_SENDER_PORT=587
EMAIL_RECIPIENTS_ERROR=mail1@domain.com
EMAIL_RECIPIENTS_INFORMATION=mail1@domain.com

# --- Telegram Notifications ---
TELEGRAM_ENABLED=false
TELEGRAM_STATUS_MESSAGES_EVERY_X_MINUTES=60
TELEGRAM_SENDER_BOT_TOKEN=
TELEGRAM_RECIPIENTS_ERROR_CHAT_IDS=-123456789
TELEGRAM_RECIPIENTS_INFO_CHAT_IDS=-123456789

# --- phpMyAdmin ---
PHPMYADMIN_REPLICAS=0
PHPMYADMIN_URL=phpmyadmin.statechecker.domain.de
PHPMYADMIN_PORT=8081

# --- Web UI Configuration ---
WEB_URL=web.statechecker.domain.de
WEB_REPLICAS=1
WEB_PORT=8080

# --- Statechecker Config (JSON) ---
STATECHECKER_SERVER_CONFIG='{
    "toolsUsingApi_tolerancePeriod_inSeconds": "100",
    "telegram": {
        "botToken": "USE_SECRET_INSTEAD",
        "errorChatID": "-123456789",
        "infoChatID": "-123456789",
        "adminStatusMessage_everyXMinutes": "60",
        "adminStatusMessage_operationTime_offsetPercentage": "3.4"
    },
    "websites": {
        "checkWebSitesEveryXMinutes": 30,
        "websitesToCheck": [
            "https://example.com"
        ]
    },
    "googleDrive": {
        "checkFilesEveryXMinutes": 60,
        "foldersToCheck": []
    }
}'
