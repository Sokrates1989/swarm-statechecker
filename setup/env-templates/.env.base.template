# =============================================================================
# Swarm Statechecker - Base Environment Configuration
# =============================================================================
# This file contains core settings applicable to all deployment configurations.
# Additional settings are appended based on proxy selection.
# =============================================================================

# --- Stack Configuration ---
STACK_NAME=statechecker
DATA_ROOT=/swarm/data/statechecker

# --- Database Configuration ---
DB_TYPE=mysql
DB_NAME=state_checker
DB_USER=state_checker

# --- Backup Integration ---
ENABLE_BACKUP_NETWORK=false

# --- Docker Images ---
IMAGE_NAME=sokrates1989/statechecker
IMAGE_VERSION=1.0.1
WEB_IMAGE_NAME=sokrates1989/statechecker-web
WEB_IMAGE_VERSION=1.0.1

# --- Service Replicas ---
API_REPLICAS=1
CHECK_REPLICAS=1
WEB_REPLICAS=1
PHPMYADMIN_REPLICAS=0

# --- API Configuration ---
API_PORT=8787

# --- Check Configuration ---
CHECK_WEBSITES_EVERY_X_MINUTES=30
CHECK_GOOGLEDRIVE_EVERY_X_MINUTES=60
STATUS_MESSAGES_TIME_OFFSET_PERCENTAGE=2.5

# --- Timezone ---
TIMEZONE=Europe/Berlin

# --- Telegram Configuration ---
TELEGRAM_ENABLED=false
TELEGRAM_STATUS_MESSAGES_EVERY_X_MINUTES=60
TELEGRAM_RECIPIENTS_ERROR_CHAT_IDS=-123456789
TELEGRAM_RECIPIENTS_INFO_CHAT_IDS=-123456789

# --- Email Configuration ---
EMAIL_ENABLED=false
EMAIL_SENDER_USER=webmaster@example.com
EMAIL_SENDER_HOST=smtp.example.com
EMAIL_SENDER_PORT=465
EMAIL_RECIPIENTS_ERROR=error@example.com
EMAIL_RECIPIENTS_INFORMATION=info@example.com

# --- Statechecker Server Config (JSON) ---
# This is auto-generated by the wizard based on your website selections
STATECHECKER_SERVER_CONFIG=

